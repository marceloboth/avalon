<div class="ui segment">
  <div class="ui breadcrumb">
    {{link-to "Início" "index" class="section"}}
    <i class="right chevron icon divider"></i>
    <a class="active section">Páginas</a>
  </div>
</div>

<div class="ui segment">
  <h3>Páginas</h3>
  <div class="ui divider"></div>

  {{#if model}}
  <div class="dataTables_wrapper no-footer">
    <table class="pagesTable ui table striped no-footer" style="border-radius: 0px;" width="100%">
      <thead>
        <tr>
          <th>Título</th>
          <th>Endereço</th>
          <th>Publicada</th>
          <th>Ações</th>
        </tr>
      </thead>
      <tbody>
        {{#each model as |page|}}
          <tr class="record">
            <td>{{page.title}}</td>
            <td>{{page.slug}}</td>
            <td>{{page.publicated}}</td>
            <td>
              {{#link-to 'pages.edit' page}}
                <div class="ui button icon green compact"><i class="edit icon"></i></div>
              {{/link-to}}

              <div class="ui button icon red compact">
                <i class="trash icon" {{action 'delete' page}}></i>
              </div>
            </td>
          </tr>
        {{/each}}
      </tbody>
    </table>
  </div>
  {{else}}
    Nenhuma página criada até o momento.
  {{/if}}
</div>

{{link-to "Criar nova página" "pages.new" class="ui primary button"}}


